<%= form_for @user, :html => { :class => "form-horizontal user" } do |f| %>


  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contact, :class => 'control-label col-lg-2 hidden' %>
    <div class="col-lg-10">
      <%= f.text_field :contact, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :PAN, :class => 'control-label col-lg-2 hidden' %>
    <div class="col-lg-10">
      <%= f.text_field :pan, :class => 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :tax_status, :class => 'control-label col-lg-2 hidden' %>
    <div class="col-lg-10">
      <%= f.select :tax_status_id, options_for_select(TaxStatus.all.collect{|t| [t.name, t.id]} ) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>