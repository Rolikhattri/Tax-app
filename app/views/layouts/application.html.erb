<!DOCTYPE html>
<html>
  <head>
    <title>TaxApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-custom">
      <%= link_to "TaxApp", root_path, :class => "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
 
  
      <%if (current_user)%>
       <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav mr-auto">
            
            <% if (profile_created(current_user))%>
              <li class="nav-item">
                <%= link_to "Show Profile", user_path(current_user.id), :class => "nav-link", :style=>'font-weight: bold;' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Create Profile", edit_user_path(current_user.id), :class => "nav-link", :style=>'font-weight: bold;' %>
              </li>
            <% end %>
          </ul>
          <div class="pull_right">
            <li class="nav-item"> 
              <%= link_to "Logout", destroy_user_session_path, :style=>'font-weight: bold;', :method => :delete %>
            </li>
          </div>
      <% end %>
    </nav>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
